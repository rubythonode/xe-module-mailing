<?xml version="1.0" encoding="UTF-8"?>
<skin version="0.2">
    <title xml:lang="ko">기본 스킨</title>
    <title xml:lang="zh-TW">預設面板</title>
    <description xml:lang="ko">Mailing 모듈의 기본 스킨입니다.</description>
    <description xml:lang="zh-TW">郵件列表預設面板。</description>
    <version>0.1</version>
    <date>2009-11-24</date>
    <author email_address="skklove@gmail.com" link="http://zero.textyle.kr">
        <name xml:lang="ko">zero</name>
        <name xml:lang="zh-TW">zero</name>
    </author>
    <license>GPL v2 or later</license>
    <colorset>
        <color name="default" >
            <title xml:lang="ko">기본</title>
            <title xml:lang="zh-TW">預設</title>
        </color>
    </colorset>

    <extra_vars>
        <var name="title" type="text">
            <title xml:lang="ko">제목</title>
            <title xml:lang="zh-TW">標題</title>
            <description xml:lang="ko">제목을 적어주세요.</description>
            <description xml:lang="zh-TW">請輸入標題。</description>
        </var>
        <var name="sub_title" type="text">
            <title xml:lang="ko">부제목</title>
            <title xml:lang="zh-TW">副標題</title>
            <description xml:lang="ko">제목 옆에 나타날 부제목을 적어주세요.</description>
            <description xml:lang="zh-TW">請輸入標題旁的副標題。</description>
        </var>
        <var name="comment" type="textarea">
            <title xml:lang="ko">상세 설명</title>
            <title xml:lang="zh-TW">詳細說明</title>
            <description xml:lang="ko">제목 아래 표시될 설명을 입력하실 수 있습니다.</description>
            <description xml:lang="zh-TW">請輸入標題下方的詳細說明。</description>
        </var>
        <var name="duration_new" type="text" default="24">
            <title xml:lang="ko">new표시 시간 (hours)</title>
            <title xml:lang="zh-TW">new顯示時間 (hours)</title>
        </var>
    </extra_vars>
</skin>
